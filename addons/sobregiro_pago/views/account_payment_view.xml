<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_sobregiro" model="ir.ui.view">
        <field name="name">account.payment.form.sobregiro</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_internal_transfer']" position="after">
                <field name="sobregiro"/>
                <field name="cuenta_sobregiro_id" attrs="{'invisible': [('sobregiro', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
