<?xml version="1.0"?>
<odoo>
	<data>


		<record id="account_saving_import_wizard_form"
			model="ir.ui.view">
			<field name="name">account.saving.import.wizard.form</field>
			<field name="model">account.saving.import.wizard</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Importar Planes de Ahorro"
					version="16.0">
					<header>

					</header>
						<notebook>
							<page string="Archivo"
								  attrs="{'invisible':[('type','!=','file')]}"
>
								<group>
									<field name="type" invisible="1" />
									<field name="file_name" invisible="1" colspan="2" />
									<field name="file" colspan="2" filename="file_name"  />
								</group>
							</page>
								<page string="Asignar Facturas" attrs="{'invisible':[('type','=','file')]}">
									<group>
									<field name="company_id" options="{'no_create':True,'no_open':True,'no_edit':True}" readonly="1" />
																			<field name="partner_id" options="{'no_create':True,'no_open':True,'no_edit':True}" readonly="1" />
								</group>

<field name="line_ids" editable="bottom">
	<tree editable="bottom" decoration-success="invoice_id" decoration-danger="not invoice_id"
	create="false" delete="false"
	>
		<field name="line_id" readonly="1" force_save="1"  options="{'no_create':True,'no_open':True,'no_edit':True}"/>

		<field name="invoice_id"
			   domain="[('company_id','=',parent.company_id),('partner_id','=',parent.partner_id),('state','=','posted')]"
			   options="{'no_create':True,'no_open':True,'no_edit':True}"/>
		<field name="name" />
		<field name="total" sum="total"/>

	</tree>
</field>
								</page>

						</notebook>
					<newline />
					<footer>
						<button name="process" type="object" string="Procesar"
							icon='fa-cogs' />
						<button special="cancel" name="cancel" string="Salir"
							colspan="2" type="object" icon='fa-times' />
					</footer>
				</form>
			</field>
		</record>


		<record id="account_saving_import_wizard_compute_action"
			model="ir.actions.act_window">
			<field name="name">Importar Planes de Ahorro</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.saving.import.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_id"
				ref="account_saving_import_wizard_form" />
			<field name="context">{'default_type':'file'}</field>
			<field name="target">new</field>
		</record>

		<record id="account_saving_import_assign_wizard_compute_action"
			model="ir.actions.act_window">
			<field name="name">Asignar Facturas en Planes de Ahorro</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.saving.import.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_id"
				ref="account_saving_import_wizard_form" />
			<field name="context">{'default_type':'assign'}</field>
			<field name="target">new</field>
		</record>



	</data>
</odoo>