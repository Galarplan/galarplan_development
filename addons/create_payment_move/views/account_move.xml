<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_move_form_view_edi_show_inherit_payment">
            <field name="name">account.move.form.view.edi.show.inherit.payment</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                <button name="button_draft" position="after">
                    
                    <button name="creat_payment_move"
                        string="Crear Pago Manual "
                        type="object" class="btn-primary"
                        groups="create_payment_move.access_create_payment"
                        attrs="{'invisible' : [('state','=','draft')]}" />
                    

                    <button name="creat_payment_move_prov"
                        string="Crear Pago Provedor "
                        type="object" class="btn-primary"
                        groups="create_payment_move.access_create_payment"
                        attrs="{'invisible' : [('state','=','draft')]}" />

                </button>


            </field>
        </record>

        

        

    </data>


</odoo>