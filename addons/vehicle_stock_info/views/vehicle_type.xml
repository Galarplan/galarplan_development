<odoo>
    <!-- Vista tipo Tree -->
    <record id="view_vehicle_type_tree" model="ir.ui.view">
        <field name="name">vehicle.type.tree</field>
        <field name="model">vehicle.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" string="Nombre"/>
                <field name="code" string="Código"/>
                <field name="active" string="Activo"/>
            </tree>
        </field>
    </record>

    <!-- Acción asociada -->
    <record id="action_vehicle_type" model="ir.actions.act_window">
        <field name="name">Tipo de Vehiculo</field>
        <field name="res_model">vehicle.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                Usa esta lista para registrar los <strong>Tipos de Vehiculos</strong> 
                con sus respectivos códigos.
            </p>
        </field>
    </record>

</odoo>
