<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Channel Plan Views -->
    <record id="view_sale_channel_plan_tree" model="ir.ui.view">
        <field name="name">sale.channel.plan.tree</field>
        <field name="model">sale.channel.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <record id="view_sale_channel_plan_form" model="ir.ui.view">
        <field name="name">sale.channel.plan.form</field>
        <field name="model">sale.channel.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="company_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_channel_plan" model="ir.actions.act_window">
        <field name="name">Canales de Venta</field>
        <field name="res_model">sale.channel.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>