<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_vehicle_model_tree" model="ir.ui.view">
        <field name="name">vehicle.model.tree</field>
        <field name="model">vehicle.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Modelo" />
                <field name="brand_id" string="Marca" />
                <field name="description" string="Descripción" />
            </tree>
        </field>
    </record>

    <record id="view_vehicle_model_form" model="ir.ui.view">
        <field name="name">vehicle.model.form</field>
        <field name="model">vehicle.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="brand_id" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vehicle_models" model="ir.actions.act_window">
        <field name="name">Modelos</field>
        <field name="res_model">vehicle.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Gestión de los modelos de vehículos.
            </p>
        </field>
    </record>


</odoo>