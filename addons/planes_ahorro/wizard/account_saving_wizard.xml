<?xml version="1.0"?>
<odoo>
	<data>

<record id="account_saving_wizard_tree"
			model="ir.ui.view">
			<field name="name">account.saving.wizard.tree</field>
			<field name="model">account.saving.wizard</field>
			<field name="type">tree</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<tree string="Importar Planes de Ahorro" delete="false"  >
					<field name="id"  />
					<field name="create_date"  />
					<field name="create_uid"  />
					<field name="file_name" />
									<field name="file_name_result"  />

				</tree>
			</field>
		</record>


		<record id="account_saving_wizard_form"
			model="ir.ui.view">
			<field name="name">account.saving.wizard.form</field>
			<field name="model">account.saving.wizard</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Importar Planes de Ahorro" delete="false" edit="false"
					version="16.0">
					<header>
						<button name="process" type="object" string="Procesar"
							icon='fa-cogs'
						action="Estas seguro?"
						/>

						<button name="process_payments" type="object" string="Procesar Pagos"
							icon='fa-cogs'
						action="Estas seguro?"
						/>

						<button name="process_invoices" type="object" string="Procesar Facturas"
							icon='fa-cogs'
						action="Estas seguro?"
						/>

					</header>
						<notebook>
							<page string="Archivo">
								<group>
								<group>
									<field name="id" readonly="1" />
									<field name="file_name" invisible="1" colspan="2" />
									<field name="file" colspan="2" filename="file_name" required="0" readonly="0"/>

											<field attrs="{'invisible':[('file_result','=',False)]}" name="file_name_result" invisible="1" colspan="2" readonly="1" />
									<field  attrs="{'invisible':[('file_result','=',False)]}" name="file_result" colspan="2" filename="file_name_result" require="1" readonly="1" />


								</group>

								<group>

									<field name="file_payment_name" invisible="1" colspan="2" />
									<field name="file_payment" colspan="2" filename="file_payment_name" required="0" readonly="0"/>

											<field attrs="{'invisible':[('file_payment_result','=',False)]}" name="file_payment_name_result" invisible="1" colspan="2" readonly="1" />
									<field  attrs="{'invisible':[('file_payment_result','=',False)]}" name="file_payment_result" colspan="2" filename="file_payment_name_result" require="1" readonly="1" />


								</group>

									<group>

									<field name="file_invoice_name" invisible="1" colspan="2" />
									<field name="file_invoice" colspan="2" filename="file_invoice_name" required="0" readonly="0"/>

											<field attrs="{'invisible':[('file_invoice_result','=',False)]}" name="file_invoice_name_result" invisible="1" colspan="2" readonly="1" />
									<field  attrs="{'invisible':[('file_invoice_result','=',False)]}" name="file_invoice_result" colspan="2" filename="file_invoice_name_result" require="1" readonly="1" />


								</group>

								</group>

							</page>
							<page string="ConfiguraciÃ³n">
								<group colspan="4" cols="2">
									<group>
										<field name="company_id" required="1" readonly="1"
											options="{'no_open':True,'no_create':True,'no_quick_create':True}"/>
																		</group>
									<group>

									</group>
								</group>
							</page>
						</notebook>

				</form>
			</field>
		</record>


		<record id="account_saving_wizard2_action"
			model="ir.actions.act_window">
			<field name="name">Importar Planes de Ahorro</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.saving.wizard</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{ }</field>
		</record>


	</data>
</odoo>