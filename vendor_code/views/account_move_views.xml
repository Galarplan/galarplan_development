<odoo>
    <record id="view_move_form_inherit_seller" model="ir.ui.view">
        <field name="name">account.move.form.inherit.seller</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="seller_id"
                    options="{'no_open': True}"
                    placeholder="Seleccionar vendedor"
                    attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}" />
            </xpath>
        </field>
    </record>


    <record id="view_account_move_tree_inherit_seller_status" model="ir.ui.view">
        <field name="name">account.move.tree.seller.status</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <!-- Agregar el campo vehicle_status -->
                <field name="seller_id" optional='hide' />
            </xpath>
        </field>
    </record>

    <record id="view_account_move_search_inherit" model="ir.ui.view">
        <field name="name">account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <filter name="group_by_sequence_prefix" position="after">
                <filter string="Vendedor" name="group_by_seller" context="{'group_by': 'seller_id'}" />
            </filter>
        </field>
    </record>

</odoo>