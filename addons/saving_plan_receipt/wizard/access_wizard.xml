<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del wizard de acceso -->
    <record id="view_receipt_access_wizard_form" model="ir.ui.view">
        <field name="name">receipt.access.wizard.form</field>
        <field name="model">receipt.access.wizard</field>
        <field name="arch" type="xml">
            <form string="Acceso a Validación de Comprobantes">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" />
                            <field name="location_id" required="1" />
                        </group>
                        <group>
                            <field name="usuario" required="1"/>
                            <field name="password" password="True" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_open_receipt_form" string="Continuar" type="object"
                            class="btn-primary" />
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de ventana para el wizard -->
    <record id="action_receipt_validation_wizard" model="ir.actions.act_window">
        <field name="name">Nueva Validación de Comprobante</field>
        <field name="res_model">receipt.access.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem 
        id="menu_receipt_validation_create" 
        name="Nuevo Comprobante" 
        parent="menu_receipt_validation" 
        action="action_receipt_validation_wizard" 
        sequence="5"
    />

</odoo>