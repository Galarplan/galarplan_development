<odoo>
    <record id="view_picking_form_inherit_change_date" model="ir.ui.view">
        <field name="name">stock.picking.form.change.date.done</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Agregamos este campo invisible al principio -->
            <xpath expr="//form" position="inside">
                <field name="user_has_group_custom_picking_date" invisible="1"/>
            </xpath>

            <!-- Luego modificamos el campo como corresponde -->
            <field name="scheduled_date" position="attributes">
                <attribute name="attrs">{'readonly': [('user_has_group_custom_picking_date', '=', False)]}</attribute>
            </field>

            <field name="date_done" position="attributes">
                <attribute name="attrs">{'readonly': [('user_has_group_custom_picking_date', '=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
