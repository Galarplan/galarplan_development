<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_saving_plan_tree_view" model="ir.ui.view">
      <field name="name">account.saving.plan.view</field>
      <field name="model">account.saving.plan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="saving_type"/>
          <field name="periods"/>
          <field name="saving_amount"/>
          <field name="company_id"/>
          <field name="currency_id"/>
           <field name="state"/>
            <field name="old_id" />
        </tree>
      </field>
    </record>



    <record id="account_saving_plan_form_view" model="ir.ui.view">
      <field name="name">account_saving_plan.form.view</field>
      <field name="model">account.saving.plan</field>
      <field name="arch" type="xml">
        <form>
          <header>

            <button name="action_posted"
                      string="Publicar" icon="fa-check"
                      type="object"
                      attrs="{'invisible':[('state','not in',('draft',))]}"
                      />

              <button name="action_draft"
                      string="Reversar" icon="fa-rotate-left"
                      type="object"
                      attrs="{'invisible':[('state','not in',('open',))]}"
                      />

              <button name="action_cancel"
                      string="Anular" icon="fa-times"
                      type="object"
                      attrs="{'invisible':[('state','not in',('draft',))]}"
                      />

             <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <!-- <label for="name" string="Nombre del activo"/> -->
                <field name="name" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
              </h1>
            </div>
              <group colspan="2">
                <group col="2" >
                  <field name="saving_type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="periods" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="saving_amount" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="fixed_amount" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="quota_amount" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                </group>
                <group col="2">
                  <field name="company_id" options="{'no_create':True,'no_edit':True,'no_open':True,}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="currency_id" readonly="1" options="{'no_create':True,'no_edit':True,'no_open':True,}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="journal_id" options="{'no_create':True,'no_edit':True,'no_open':True,}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="document_type_id" options="{'no_create':True,'no_edit':True,'no_open':True,}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                  <field name="rate_inscription" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                   <field name="rate_expense" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                   <field name="rate_insurance" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                   <field name="rate_decrement_year" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>

                      <field name="product_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                   <field name="seguro_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
     <field name="inscripcion_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
<field name="old_id"  attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                    <field name="ahorro_account_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                </group>
              </group>
          </sheet>
          </form>
      </field>

    </record>

    <record id="account_saving_plan_action" model="ir.actions.act_window">
      <field name="name">Planes de Ahorro</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.saving.plan</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new record.
        </p>
      </field>
    </record>


  
</odoo>