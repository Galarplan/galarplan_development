<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Location Places Views -->
    <record id="view_location_places_tree" model="ir.ui.view">
        <field name="name">location.places.tree</field>
        <field name="model">location.places</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <record id="view_location_places_form" model="ir.ui.view">
        <field name="name">location.places.form</field>
        <field name="model">location.places</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="company_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_location_places" model="ir.actions.act_window">
        <field name="name">Localizaciones</field>
        <field name="res_model">location.places</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>