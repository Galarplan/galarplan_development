<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_receipt_saving_plan_tree" model="ir.ui.view">
        <field name="name">receipt.saving.plan.view.tree</field>
        <field name="model">receipt.saving.plan.view</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="print_receipt"
                        string="Imprimir Recibo"
                        type="object"
                        class="btn-primary"
                        icon="fa-print" />
                </header>
                <field name="partner_name" string="Socio" />
                <field name="partner_vat" string="RUC/Cédula" />
                <field name="nombre_plan" string="Plan de Ahorro" />
                <field name="payment" string="Pago" />
                <field name="cap" string="Capital" />
                <field name="pending_cap" string="Pendiente" />
                <field name="last_payment" string="Último Pago" />
                <field name="deposit_partner" string="Fecha Depósito" />
                <field name="invoice_name" string="Factura" />
                <field name="authorization_type" string="N° Autorización" />
            </tree>
        </field>
    </record>
    <record id="view_receipt_saving_plan_form" model="ir.ui.view">
        <field name="name">receipt.saving.plan.view.form</field>
        <field name="model">receipt.saving.plan.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="partner_name" />
                        </h1>
                        <h2>
                            <field name="nombre_plan" />
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="partner_vat" string="RUC/Cédula" />
                            <field name="last_payment" string="Último Pago" />
                            <field name="deposit_partner" string="Fecha Depósito" />
                        </group>
                        <group>
                            <field name="payment" string="Pago" />
                            <field name="cap" string="Capital" />
                            <field name="pending_cap" string="Pendiente" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Detalles Adicionales">
                            <group>
                                <field name="ahorro" string="Ahorro" />
                                <field name="adm_waste_1" string="Administración/Residuos 1" />
                                <field name="adm_waste_2" string="Administración/Residuos 2" />
                            </group>
                            <group>
                                <field name="invoice_name" string="Factura" />
                                <field name="authorization_type" string="N° Autorización" />
                            </group>
                        </page>
                    </notebook>

                    <footer>
                        <button name="print_receipt"
                            string="Imprimir Recibo"
                            type="object"
                            class="btn-primary"
                            icon="fa-print" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_receipt_saving_plan_search" model="ir.ui.view">
        <field name="name">receipt.saving.plan.view.search</field>
        <field name="model">receipt.saving.plan.view</field>
        <field name="arch" type="xml">
            <search>
                <!-- Filtros predefinidos -->
                <filter string="Pagos Recientes" name="recent_payments"
                    domain="[('last_payment', '>=', context_today().replace(day=1))]" />
                <filter string="Pagos Pendientes" name="pending_payments"
                    domain="[('pending_cap', '&gt;', 0)]" />
                <separator />

                <!-- Grupo de filtros -->
                <group expand="0" string="Agrupar por">
                    <filter string="Socio" name="group_partner"
                        context="{'group_by': 'partner_name'}" />
                    <filter string="Plan de Ahorro" name="group_plan"
                        context="{'group_by': 'nombre_plan'}" />
                    <filter string="Mes de Pago" name="group_month"
                        context="{'group_by': 'last_payment:month'}" />
                </group>

                <!-- Campos de búsqueda -->
                <field name="partner_name" string="Socio"
                    filter_domain="[('partner_name', 'ilike', self)]" />
                <field name="partner_vat" string="RUC/Cédula"
                    filter_domain="[('partner_vat', 'ilike', self)]" />
                <field name="nombre_plan" string="Plan de Ahorro" />
                <field name="last_payment" string="Fecha de Pago" />
                <field name="invoice_name" string="N° Factura" />

                <!-- Búsqueda avanzada -->
                <field name="payment" string="Monto de Pago" />
                <field name="pending_cap" string="Saldo Pendiente" />
            </search>
        </field>
    </record>

    <!-- Acción para abrir la vista de recibos -->
    <record id="action_receipt_saving_plan_view" model="ir.actions.act_window">
        <field name="name">Recibos de Plan de Ahorro</field>
        <field name="res_model">receipt.saving.plan.view</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_receipt_saving_plan_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay recibos de plan de ahorro registrados
            </p>
        </field>
    </record>
</odoo>