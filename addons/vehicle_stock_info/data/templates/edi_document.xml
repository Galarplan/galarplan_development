<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Heredar el template original -->
    <template id="common_details_info_template_inherit" inherit_id="l10n_ec_edi.common_details_info_template">
        <!-- Modificar la descripción del producto -->
        <xpath expr="//descripcion" position="replace">
            <descripcion>
                <t t-if="product.is_a_vehicle">
                    <t t-out="clean_str(product.name or 'OTRO')"/>
                    <t t-out="'Chasis: ' + product.chassis_number if product.chassis_number else ''"/>
                    <t t-out="'Marca: ' + product.vehicle_brand_id.name if product.vehicle_brand_id else ''"/>
                    <t t-out="'Modelo: ' + product.vehicle_model_id.name if product.vehicle_model_id else ''"/>
                    <t t-out="'Color: ' + product.vehicle_color if product.vehicle_color else ''"/>
                    <t t-out="'Asientos: ' + str(product.number_of_seats) if product.number_of_seats else ''"/>
                    <t t-out="'Puertas: ' + str(product.number_of_doors) if product.number_of_doors else ''"/>
                    <t t-out="'Llantas: ' + str(product.number_of_tires) if product.number_of_tires else ''"/>
                    <t t-out="'Ejes: ' + str(product.number_of_axles) if product.number_of_axles else ''"/>
                    <t t-out="'Año: ' + str(product.model_year) if product.model_year else ''"/>
                    <t t-out="'Número de motor: ' + product.engine_number if product.engine_number else ''"/>
                    <t t-out="'Número RAMW: ' + product.ramw_number if product.ramw_number else ''"/>
                    <t t-out="'Transmisión: ' + product.transmission if product.transmission else ''"/>
                    <t t-out="'Combustible: ' + product.fuel_type if product.fuel_type else ''"/>
                    <t t-out="'Cilindraje: ' + str(product.cylinder_capacity) if product.cylinder_capacity else ''"/>
                </t>
                <t t-else="">
                    <t t-out="clean_str(line.product_id and line.product_id.name or line.name or 'OTRO')"/>
                </t>
            </descripcion>
        </xpath>
    </template>
</odoo>