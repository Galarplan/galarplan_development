<odoo>
    <!-- Extender la vista de formulario de res.partner -->
    <record id="view_partner_form_inherit_check" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.check</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <!-- Agregar el campo booleano en la pestaÃ±a "Contacto" -->
            <xpath expr="//field[@name='mobile']" position="after">
                <group>
                    <field name="cliente_proveedor_verificado" options="{'no_autosave': True}" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>