<odoo>
    <record id="view_product_form_inherit_vehicle" model="ir.ui.view">
        <field name="name">product.template.form.inherit.vehicle</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='purchase_ok']" position="after">
                <field name="is_a_vehicle" />
                <label for="is_a_vehicle" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Vehicle Details" attrs="{'invisible': [('is_a_vehicle', '=', False)]}">
                    <group>
                        <field name="chassis_number" />
                        <field name="vehicle_status" />
                        <field name="vehicle_color" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="product_template_search_view_inherit_chassis" model="ir.ui.view">
        <field name="name">product.template.search.view.chassis</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="chassis_number" string="Chassis Number" />
            </xpath>
        </field>
    </record>


</odoo>