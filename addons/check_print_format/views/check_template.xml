<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_check_bank" name="Formato de egreso de cheque">
        <t t-foreach="docs" t-as="payment">
            <main class="page">
                <t t-set="company" t-value="payment.company_id" />
                <div class="check-layout">
                    <!-- Cabecera -->
                    <table style="width: 100%; margin-bottom: 1rem; border-collapse: collapse;">
                        <tr>
                            <td colspan="3"
                                style="text-align: center; font-size: 1.5rem;color:blue;">
                                <strong>
                                    <span t-esc="payment.company_id.name" />
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3" style="text-align: center; font-size: 1.5rem;">
                                <strong>Comprobante de Egreso: <span t-esc="payment.name" /></strong>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3" style="text-align: center; font-size: 1.2rem;">
                                <strong>Cheque #<span t-esc="payment.check_number" /></strong>
                            </td>
                        </tr>

                    </table>

                    <table
                        style="width: 100%; margin-bottom: 1rem; margin-top: 1rem;border-collapse: collapse;">
                        <tr>
                            <td>
                                <strong>Empresa:</strong>
                                <span t-esc="payment.company_id.name" />
                            </td>
                            <td>
                                <strong>Fecha:</strong>
                                <span t-esc="payment.date" />
                            </td>
                            <td>
                                <strong>RUC/CI:</strong>
                                <span t-esc="payment.partner_id.vat" />
                            </td>

                        </tr>

                        <tr>

                            <td>
                                <strong>Cta. Cte. No.:</strong>
                                <span t-esc="payment.journal_id.bank_acc_number or ''" />
                            </td>

                            <td>
                                <strong>Proveedor:</strong>
                                <span t-esc="payment.partner_id.name" />
                            </td>

                        </tr>
                        <tr>
                            <td><strong>Valor:</strong> $<span t-esc="payment.amount" /></td>
                            <td colspan="2">
                                <strong>Banco:</strong>
                                <span t-esc="payment.journal_id.name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Valor en letras: </strong>
                                <span
                                    t-esc="payment.check_amount_in_words or '' " />
                            </td>

                            <td colspan="2">
                                <strong>Descripcion:</strong>
                                <span t-esc="payment.ref or 'egreso'" />
                            </td>
                        </tr>
                    </table>

                    <!-- Detalle del asiento -->
                    <h4>Detalle:</h4>
                    <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000; padding: 5px; text-align: left;">
                                    Codigo</th>
                                <th style="border: 1px solid #000; padding: 5px; text-align: left;">
                                    Cuenta</th>
                                <!-- <th style="border: 1px solid #000; padding: 5px; text-align:
                                left;">Centro
                                    de Costo</th> -->
                                <th style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    Debe</th>
                                <th style="border: 1px solid #000; padding: 5px; text-align: right;">
                                    Haber</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="payment.line_ids" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <span t-esc="line.account_id.code" />
                                    </td>
                                    <td style="border: 1px solid #000; padding: 5px;">
                                        <span t-esc="line.account_id.name" />
                                    </td>
                                    <!-- <td
                                        style="border: 1px solid #000; padding: 5px; text-align: left;">
                                        <span t-esc="line.analytic_account_id.name or ''" />
                                    </td> -->
                                    <td
                                        style="border: 1px solid #000; padding: 5px; text-align: right;">
                                        <span t-esc="line.debit" />
                                    </td>
                                    <td
                                        style="border: 1px solid #000; padding: 5px; text-align: right;">
                                        <span t-esc="line.credit" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Firmas -->
                    <table style="width: 100%; margin-top: 3rem; text-align: center;">
                        <tr>
                            <td style="width: 33%;">_________________________ Revisado por:</td>
                            <td style="width: 33%;">_________________________ Aprobado por:</td>
                            <td style="width: 33%;">_________________________ Recibido por:</td>
                        </tr>
                    </table>
                </div>
            </main>
        </t>
    </template>
</odoo>