<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record model="ir.ui.view"
            id="account_move_form_view_latam_inherit">
            <field name="name">account.move.form.view.latam.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ec_edi.account_move_form_invoice_and_withhold_view" />
            <field name="arch" type="xml">
                <field name="l10n_ec_sri_payment_id" position="after">

                    <field name="authorization_type"
                        attrs="{'invisible': ['|','|',('move_type','not in',('in_invoice','in_refund')), ('l10n_latam_use_documents', '=', False), ('l10n_latam_manual_document_number', '=', False), '|', '|', ('l10n_latam_use_documents', '=', False), ('highest_name', '!=', False), ('state', '!=', 'draft')],                             'required': [('partner_id', '!=', False), ('l10n_latam_use_documents', '=', True), '|', ('l10n_latam_manual_document_number', '=', True), ('highest_name', '=', False)],                             'readonly': [('posted_before', '=', True), ('state', '!=', 'draft')]}" />
                    <field name="l10n_ec_code_taxsupport"
                        attrs="{'required':[ ('move_type', 'in', ('in_refund','in_invoice',))],'invisible':[ ('move_type', 'not in', ('in_refund','in_invoice',))]}"
                    />
                </field>

            </field>
        </record>

        <record id="account_move_form_invoice_and_withhold_view" model="ir.ui.view">
            <field name="name">account.move.form.invoice.and.withhold.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_ec_edi.account_move_form_invoice_and_withhold_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_ec_authorization_number']" position="replace">
                    <field name="l10n_ec_authorization_number" attrs="{'readonly': [('move_type', 'in', ['out_invoice', 'out_refund'])]}" class="text-break"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_move_form_sequence_doc"
            model="ir.ui.view">
            <field name="name">account.move.form.latam.document.doc</field>
            <field name="model">account.move</field>
            <field name="inherit_id"
                ref="account.view_move_form" />
            <field name="arch" type="xml">


                <field name="to_check" position="before">

                    <field name="manual_origin" readonly="1"
                        attrs="{'invisible':[('required_origin_info','=',True)]}"
                    />
                    <field name="required_origin_info" invisible="1" />
                    <field name="manual_document_number"
                        placeholder="001-001-000000001"
                        attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />
                    <field name="manual_date"
                        attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />
                    <field name="manual_origin_authorization"
                        attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />


                </field>


            </field>
        </record>

        <!-- <record id="account_payment_purchase.view_move_form_inherit_manual_date" model="ir.ui.view">
            <field name="name">account.move.form.inherit.manual.date</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="manual_date" invisible="1"
                        attrs="{'invisible': [('move_type', '!=', 'out_refund')]}" />
                    <field name="manual_document_number" invisible="1"
                        attrs="{'invisible': [('move_type', '!=', 'out_refund')]}" />
                </xpath>
            </field>
        </record> -->

        <record id="action_move_withhold_in" model="ir.actions.act_window">
            <field name="name">Retenciones de Proveedores</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_move_tree" />
            <field name="search_view_id" ref="account.view_account_invoice_filter" />
            <field name="domain">[('move_type', '=', 'entry'), ('journal_id.l10n_ec_withhold_type',
                '=', 'in_withhold')]</field>
            <field name="context">
                {
                'default_move_type': 'entry',
                'default_journal_id': ('journal_id.l10n_ec_withhold_type', '=', 'in_withhold'),
                'show_auth': True
                }
            </field>
        </record>

        <record id="action_move_withhold_out" model="ir.actions.act_window">
            <field name="name">Retenciones de Clientes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_move_tree" />
            <field name="search_view_id" ref="account.view_account_invoice_filter" />
            <field name="domain">[('move_type', '=',
                'entry'),('journal_id.l10n_ec_withhold_type','=','out_withhold')]</field>
            <field name="context">
                {'show_auth':False,
                'default_move_type': 'entry',
                'default_journal_id': ('journal_id.l10n_ec_withhold_type', '=', 'out_withhold'),
                }
            </field>
        </record>


    </data>


</odoo>