<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_inherit_other_payment" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="available_check_ids" invisible='1' />
                <!-- <field name="check_line_id" attrs="{'invisible':[('payment_method_id.code','not in','check')]}" /> -->
                <field name="check_line_id" attrs="{'invisible':[('payment_method_code','not in',('check_printing','pdc'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>