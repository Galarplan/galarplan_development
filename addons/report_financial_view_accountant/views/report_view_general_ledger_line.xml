<odoo>
    <data>

        <!-- Vista de Lista (Tree) para report.view.general.ledger.line -->
        <record id="view_report_view_general_ledger_line_tree" model="ir.ui.view">
            <field name="name">report.view.general.ledger.line.tree</field>
            <field name="model">report.view.general.ledger.line</field>
            <field name="arch" type="xml">
                <tree string="Detalle reporte Mayor" create="false" delete="false" edit="false">

                    <field name="date"/>
                    <field name="journal_id" optional="show"/>
                    <field name="partner_id" optional="hide"/>
                    <field name="company_id" optional="hide"/>
                    <field name="move_id" widget="many2one_button" options="{'type': 'object'}"/>
                    <field name="name"/>
                    <field name="debit" sum="total"/>
                    <field name="credit" sum="total" />
                    <field name="amount_accumulated"/>

                </tree>
            </field>
        </record>

        <!-- Vista de Búsqueda (Search) para report.view.general.ledger.line -->
        <record id="view_report_view_general_ledger_line_search" model="ir.ui.view">
            <field name="name">report.view.general.ledger.line.search</field>
            <field name="model">report.view.general.ledger.line</field>
            <field name="arch" type="xml">
                <search string="Detalle reporte Mayor">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Vista de Formulario (Form) para report.view.general.ledger.line -->
        <record id="view_report_view_general_ledger_line_form" model="ir.ui.view">
            <field name="name">report.view.general.ledger.line.form</field>
            <field name="model">report.view.general.ledger.line</field>
            <field name="arch" type="xml">
                <form string="Detalle reporte Mayor" create="false" delete="false" edit="false">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="amount_accumulated"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


