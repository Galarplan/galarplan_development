<odoo>
    <record id="round_off_config" model="ir.ui.view">
        <field name="name">res.config.settings.roundoff</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <h2>Redondeo de cuentas</h2>
                    <div class="row mt16 o_settings_container" name="parent_account_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="invoice_roundoff" class="oe_inline"/>
                                </div>
                                <div class="o_setting_right_pane" name="parent_account_right_pane">
                                    <label for="invoice_roundoff"/>
                                    <div class="text-muted">
                                        Habilitar Redondeo Contable
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="roundoff_account_id" class="oe_inline"/>
                                </div>
                                <div class="o_setting_right_pane" name="parent_account_right_pane">
                                    <label for="roundoff_account_id"/>
                                    <div class="text-muted">
                                        Cuenta de redondeo
                                    </div>
                                </div>
                            </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
