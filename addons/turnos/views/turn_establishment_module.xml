<odoo>
    <data>

        <!-- Vista de Lista (Tree) para turn.establishment.module -->
        <record id="view_turn_establishment_module_tree" model="ir.ui.view">
            <field name="name">turn.establishment.module.tree</field>
            <field name="model">turn.establishment.module</field>
            <field name="arch" type="xml">
                <tree string="Módulos del Establecimiento" decoration-muted="not active">


                    <field name="company_id" optional="hide"/>
                    <field name="sequence" widget="handle" />
                      <field name="turn_establishment_id"/>
                      <field name="name"/>
                    <field name="location" widget="radio" />
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Vista de Búsqueda (Search) para turn.establishment.module -->
        <record id="view_turn_establishment_module_search" model="ir.ui.view">
            <field name="name">turn.establishment.module.search</field>
            <field name="model">turn.establishment.module</field>
            <field name="arch" type="xml">
                <search string="Buscar Módulos">
                    <filter string="Activos" name="filter_active" domain="[('active','=',True)]"/>
                    <separator/>
                    <filter string="Inactivos" name="filter_inactive" domain="[('active','=',False)]"/>
                    <group>
                        <filter string="Compañia" name="grp_company" context="{'group_by':'company_id'}"/>
                        <filter string="Establecimiento" name="grp_turn_establishment_id" context="{'group_by':'turn_establishment_id'}"/>
                        <filter string="Linea" name="grp_location" context="{'group_by':'location'}"/>
                    </group>
                    <field name="name"/>
                    <field name="turn_establishment_id"/>
                </search>
            </field>
        </record>

        <!-- Vista de Formulario (Form) para turn.establishment.module -->
        <record id="view_turn_establishment_module_form" model="ir.ui.view">
            <field name="name">turn.establishment.module.form</field>
            <field name="model">turn.establishment.module</field>
            <field name="arch" type="xml">
                <form string="Módulo del Establecimiento">
                    <sheet>
                        <group>
                            <group>
                            <field name="company_id" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
    <field name="turn_establishment_id" options="{'no_create':True,'no_open':True,'no_edit':True}"
    domain="[('company_id','=',company_id)]"
    />

                            </group>
                            <group>
                                  <field name="name"/>
                                  <field name="location" widget="radio"/>
                                <field name="sequence" />
                            <field name="active"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para abrir las vistas de Tree y Form -->
        <record id="action_turn_establishment_module" model="ir.actions.act_window">
            <field name="name">Módulos del Establecimiento</field>
            <field name="res_model">turn.establishment.module</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_turn_establishment_module_tree"/>
            <field name="search_view_id" ref="view_turn_establishment_module_search"/>
        </record>


    </data>
</odoo>
