<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="report_movements_report_xlsx_act" model="ir.actions.report">
        <field name="name">Reporte de Movimientos de Empleados </field>
        <field name="model">hr.employee.movement</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">payroll_ec.report_movements_xlsx</field>
        <field name="print_report_name">'Reporte de %s' % object.name </field>
    </record>

    <record id="report_payslip_runs_report_xlsx_act" model="ir.actions.report">
        <field name="name">Reporte de Roles Empleados </field>
        <field name="model">hr.payslip.run</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">payroll_ec.report_payslip_runs_xlsx</field>
        <field name="print_report_name">'Reporte de %s %s %s' % (object.type_struct_id.name,object.month_id.name,object.year) </field>
    </record>


    <record id="payroll.action_report_payslip" model="ir.actions.report">
            <field name="name">Nómina</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">payroll_ec.report_payslip_new</field>
            <field name="print_report_name">'Liquidación - %s' % (object.employee_id.name)</field>
        </record>


</odoo>
        
