<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Vista árbol -->
        <record id="view_note_order_tree" model="ir.ui.view">
            <field name="name">note.order.tree</field>
            <field name="model">note.order</field>
            <field name="arch" type="xml">
                <tree string="Notas de Pedido">
                    <field name="name"/>
                    <field name="customer_name"/>
                    <field name="vehicle_model"/>
                    <field name="total_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Vista formulario -->
        <record id="view_note_order_form" model="ir.ui.view">
            <field name="name">note.order.form</field>
            <field name="model">note.order</field>
            <field name="arch" type="xml">
                <form string="Nota de Pedido">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="customer_name"/>
                            <field name="customer_phone"/>
                            <field name="customer_address"/>
                        </group>
                        <group string="Detalles del Vehículo">
                            <field name="vehicle_brand"/>
                            <field name="vehicle_model"/>
                            <field name="vehicle_version"/>
                            <field name="vehicle_chassis"/>
                            <field name="vehicle_engine"/>
                            <field name="vehicle_color"/>
                            <field name="vehicle_year"/>
                            <field name="vehicle_plate"/>
                        </group>
                        <group string="Detalles Financieros">
                            <field name="total_price"/>
                            <field name="amount_financed"/>
                            <field name="amount_downpayment"/>
                        </group>
                        <group string="Otros">
                            <field name="accessories"/>
                            <field name="comments"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                    <footer>
                        <button string="Confirmar" type="object" name="action_confirm" class="btn-primary" states="draft"/>
                        <button string="Facturar" type="object" name="action_invoice" class="btn-success" states="confirmed"/>
                        <button string="Cancelar" type="object" name="unlink" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_note_order" model="ir.actions.act_window">
            <field name="name">Notas de Pedido</field>
            <field name="res_model">note.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_note_order_root" name="Note Order" sequence="60" />
        <menuitem id="menu_note_order" name="Note Order" parent="menu_note_order_root" action="action_note_order" sequence="10"/>
    </data>
</odoo>
