<odoo>
    <data>

        <!-- Vista de Lista (Tree) para ticket.type.service -->
        <record id="view_ticket_type_service_tree" model="ir.ui.view">
            <field name="name">ticket.type.service.tree</field>
            <field name="model">ticket.type.service</field>
            <field name="arch" type="xml">
                <tree string="Tipos de Servicio">
                    <field name="name"/>
                      <field name="active" />
                </tree>
            </field>
        </record>

        <!-- Vista de Búsqueda (Search) para ticket.type.service -->
        <record id="view_ticket_type_service_search" model="ir.ui.view">
            <field name="name">ticket.type.service.search</field>
            <field name="model">ticket.type.service</field>
            <field name="arch" type="xml">
                <search string="Buscar Tipos de Servicios">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Vista de Formulario (Form) para ticket.type.service -->
        <record id="view_ticket_type_service_form" model="ir.ui.view">
            <field name="name">ticket.type.service.form</field>
            <field name="model">ticket.type.service</field>
            <field name="arch" type="xml">
                <form string="Tipo de Servicios">
                    <sheet>
                        <group>
                               <group>
                            <field name="name" colspan="2" />
                               </group>
                               <group>
                             <field name="active" colspan="2"/>
                               </group>
                        </group>
                        <notebook>
                            <page string="Servicios">
                                <field name="service_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para abrir las vistas de Tree y Form -->
        <record id="action_ticket_type_service" model="ir.actions.act_window">
            <field name="name">Tipos de Servicios</field>
            <field name="res_model">ticket.type.service</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ticket_type_service_tree"/>
            <field name="search_view_id" ref="view_ticket_type_service_search"/>
        </record>


    </data>
</odoo>
