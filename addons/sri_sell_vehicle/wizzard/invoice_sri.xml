<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_generate_xml_excel_form" model="ir.ui.view">
        <field name="name">wizard.generate.xml.excel.form</field>
        <field name="model">wizard.generate.xml.excel</field>
        <field name="arch" type="xml">
            <form string="Generar XML/Excel de Ventas">
                <group>
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="empresa_id" />
                    <button string="Cargar Facturas" type="object" name="load_invoices"
                        class="oe_highlight" />
                </group>
                <group string="Facturas Seleccionadas" col='2' colspan='4'>
                    <field name="invoice_ids" colspan='4'>
                        <tree editable="bottom" options="{'height': '400px'}">
                            <field name="ruc_empresa" colspan="2" />
                            <field name="camvcpn" colspan="1" />
                            <field name="serialvin" colspan="2" />
                            <field name="partner_id" colspan="2" />
                            <field name="identification_type" colspan="1" />
                            <field name="identification_number" colspan="2" />
                            <field name="tipo_comprobante" colspan="1" />
                            <field name="estblecimiento" colspan="1" />
                            <field name="punto_emision" colspan="1" />
                            <field name="numero_comprobante" colspan="2" />
                            <field name="numero_autorizacion" colspan="2" />
                            <field name="fecha_venta" colspan="1" />
                            <field name="precio_venta" colspan="1" />
                            <field name="codigo_canton" colspan="2" />
                            <field name="tipo_vivienda" colspan="1" />
                            <field name="calle" colspan="2" />
                            <field name="interseccion" colspan="2" />
                            <field name="provincia" colspan="1" />
                            <field name="celular" colspan="1" />
                        </tree>
                    </field>
                </group>

                <footer>
                    <button string="Generar XML" type="object" name="generate_xml"
                        class="btn-primary" />
                    <button string="Generar Excel" type="object" name="generate_excel"
                        class="btn-secondary" />
                    <button string="Cancelar" class="btn-link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_generate_xml_excel" model="ir.actions.act_window">
        <field name="name">Generar XML/Excel</field>
        <field name="res_model">wizard.generate.xml.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>