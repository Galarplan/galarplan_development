<odoo>
    <record id="view_attention_devolution_tree" model="ir.ui.view">
        <field name="name">attention.devolution.tree</field>
        <field name="model">attention.devolution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_id" />
                <field name="plan_type" />
                <field name="return_request_date" />
                <field name="paid_value" />
                <field name="check_status" />
                <field name="payment_status" />
            </tree>
        </field>
    </record>

    <record id="view_attention_devolution_form" model="ir.ui.view">
        <field name="name">attention.devolution.form</field>
        <field name="model">attention.devolution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="client_id" />
                            <field name="plan_type" />
                            <field name="plan_start_date" />
                            <field name="return_request_date" />
                        </group>
                        <group>
                            <field name="paid_value" />
                            <field name="return_date" />
                            <field name="liquidated_value" />
                        </group>
                    </group>
                    <group>
                        <field name="check_status" />
                        <field name="payment_status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_attention_devolution_search" model="ir.ui.view">
        <field name="name">attention.devolution.search</field>
        <field name="model">attention.devolution</field>
        <field name="arch" type="xml">
            <search>
                <field name="client_id" />
                <field name="check_status" />
                <field name="payment_status" />
                <filter string="Pending Check" name="pending_check"
                    domain="[('check_status','=','pending')]" />
                <filter string="Pending Payment" name="pending_payment"
                    domain="[('payment_status','=','pending')]" />
            </search>
        </field>
    </record>

    <record id="action_attention_devolution" model="ir.actions.act_window">
        <field name="name">Registros de Devoluciones</field>
        <field name="res_model">attention.devolution</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_check_status': 'pending'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer registro de devoluci√≥n
            </p>
        </field>
    </record>

</odoo>