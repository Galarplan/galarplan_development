<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_entry_template_tree" model="ir.ui.view">
        <field name="name">account.entry.template.tree</field>
        <field name="model">account.entry.template</field>
        <field name="arch" type="xml">
            <tree string="Plantillas de Asientos Contables">
                <field name="name" />
                <field name="journal_id" />
            </tree>
        </field>
    </record>

    <record id="view_account_entry_template_form" model="ir.ui.view">
        <field name="name">account.entry.template.form</field>
        <field name="model">account.entry.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Asientos Contables">
                <header>
                    <button name="action_create_entries"
                        string="Generar Asientos"
                        type="object"
                        class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="journal_id" />
                        <field name="company_id" />
                        <field name="code" />
                    </group>
                    <notebook>
                        <page string="LÃ­neas del Asiento">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <!-- <field name="debit_account_id" /> -->
                                    <!-- <field name="credit_account_id" /> -->
                                    <field name="account_template" />
                                    <!-- <field name="budget_line_id" /> -->
                                    <!-- <field name="amount" /> -->
                                     <field name="debit_bol" />
                                     <field name="display_type" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_account_entry_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Asientos</field>
        <field name="res_model">account.entry.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_account_entry_template_root"
        name="Plantillas Contables"
        parent="account.menu_finance_entries"
        sequence="50" />

    <menuitem id="menu_account_entry_template"
        name="Plantillas de Asientos"
        parent="menu_account_entry_template_root"
        action="action_account_entry_template" />


</odoo>