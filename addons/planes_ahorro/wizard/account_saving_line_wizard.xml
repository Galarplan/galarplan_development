<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!-- Vista del wizard -->
    <record id="account_saving_line_wizard_form" model="ir.ui.view">
        <field name="name">account.saving.line.wizard.form</field>
        <field name="model">account.saving.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Facturar">
                <group>
                    <field name="date" required="1"/>

                </group>
                <newline/>
                <field name="saving_line_ids" readonly="context.get('lock',True)" force_save="1"
                       context="{'hide_invoice':True,'tree_view_ref':'planes_ahorro.account_saving_lines_main_tree_view'}"
                       domain="[('enabled_for_invoice','=',True),('id','in',context.get('active_ids',[-1,-1]))]"
                    />
                <footer>
                    <button name="action_invoice" icon="fa-money" string="Facturar" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- AcciÃ³n del wizard -->
    <record id="action_account_saving_line_wizard" model="ir.actions.act_window">
        <field name="name">Facturar</field>
        <field name="res_model">account.saving.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_saving_line_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>
