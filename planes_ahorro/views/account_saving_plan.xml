<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_saving_plan_tree_view" model="ir.ui.view">
      <field name="name">account.saving.plan.view</field>
      <field name="model">account.saving.plan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="saving_type"/>
          <field name="periods"/>
          <field name="saving_amount"/>
          <field name="company_id"/>
          <field name="currency_id"/>
           <field name="state"/>
        </tree>
      </field>
    </record>



    <record id="account_saving_plan_form_view" model="ir.ui.view">
      <field name="name">account_saving_plan.form.view</field>
      <field name="model">account.saving.plan</field>
      <field name="arch" type="xml">
        <form>
          <header>
             <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <!-- <label for="name" string="Nombre del activo"/> -->
                <field name="name" required='1'/>
              </h1>
            </div>
              <group colspan="2">
                <group col="2" >
                  <field name="saving_type"/>
                  <field name="periods"/>
                  <field name="saving_amount"/>
                  <field name="fixed_amount"/>
                  <field name="quota_amount"/>
                </group>
                <group col="2">
                  <field name="company_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="currency_id" readonly="1" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="journal_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="document_type_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="rate_inscription"/>
                   <field name="rate_expense"/>
                   <field name="rate_insurance"/>
                   <field name="rate_decrement_year"/>



                </group>
              </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>

    </record>

    <record id="account_saving_plan_action" model="ir.actions.act_window">
      <field name="name">Planes de Ahorro</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.saving.plan</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new record.
        </p>
      </field>
    </record>


  
</odoo>