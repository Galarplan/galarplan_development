<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Formulario -->
    <record id="view_mass_withhold_import_form" model="ir.ui.view">
        <field name="name">l10n_ec.mass_withhold_import.form</field>
        <field name="model">l10n_ec.mass.withhold.import</field>
        <field name="arch" type="xml">
            <form string="Mass Withhold Import">
                <sheet>
                    <group>
                        <field name="data_file" filename="filename" string="Excel File"/>
                        <field name="filename" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Import" type="object" name="action_import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_mass_withhold_import" model="ir.actions.act_window">
        <field name="name">Mass Withhold Import</field>
        <field name="res_model">l10n_ec.mass.withhold.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_filename': 'withhold_import.xlsx'}</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_import_withhold" name="Retenciones"
        parent="account.menu_finance_reports" sequence="11"
        action="action_mass_withhold_import"/>
</odoo>