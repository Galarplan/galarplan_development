<odoo>
    <record id="view_account_saving_payment_wizard_form" model="ir.ui.view">
        <field name="name">account.saving.payment.wizard.form</field>
        <field name="model">account.saving.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Pagos">
                <group>
                    <group>
                        <field name="saving_id" invisible="1" />
                        <field name="company_id" invisible="1" />
                        <field name="payment_date" required="1" />
                        <field name="ref" required="1" placeholder="REFERENCIA" />
                        <field name="deposit_date"/>

                    </group>
                    <group>
                        <field name="payment_journal_id"
                            domain="[('type','in',('cash','bank')),('company_id','=',company_id)]"
                            options="{'no_create':True,'no_open':True,'no_edit':True}"
                        />
                        <field name="payment_method_id" invisible="1" />
                        <field name="amount" required="1" />

                    </group>

                </group>
                <field name="saving_line_ids"
                    context="{'hide_invoice':True,'tree_view_ref':'planes_ahorro.account_saving_lines_main_tree_view'}"
                    domain="[('saving_id','=',saving_id),('estado_pago','=','pendiente'),('pendiente','&gt;',0.00)]" />
                <newline />
                <field name="payment_ids">
                    <tree create="false" delete="false" edit="true"
                        decoration-bf="not saving_line_id"
                        decoration-it="pendiente!=aplicado"
                    >
                        <field name="number" />
                        <field name="date" optional="hide" />
                        <field name="saving_line_id" optional="hide" />
                        <field name="line_id" optional="hide" invisible="1" />
                        <field name="pendiente" sum="total" optional="hide" />
                        <field name="aplicado" required="1" sum="total" />
                    </tree>
                </field>
                <footer>
                    <button string="Crear Pago" type="object" name="action_create_payment"
                        class="btn-primary" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_saving_payment_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Pagos</field>
        <field name="res_model">account.saving.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>