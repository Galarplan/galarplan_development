<odoo>
    <!-- Tree View -->
    <record id="view_document_action_tree" model="ir.ui.view">
        <field name="name">document.action.tree</field>
        <field name="model">document.action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" optional="hide"/>
                <field name="code"/>
                <field name="name"/>
                <field name="is_system_action" widget="boolean_toggle" optional="hide"/>
                <field name="requires_approval" widget="boolean_toggle" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_document_action_form" model="ir.ui.view">
        <field name="name">document.action.form</field>
        <field name="model">document.action</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="sequence" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_system_action" invisible="1"/>
                            <field name="requires_approval" invisible="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_document_action_search" model="ir.ui.view">
        <field name="name">document.action.search</field>
        <field name="model">document.action</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Acciones Activas" name="active" domain="[('active','=',True)]"/>
                <filter string="Acciones del Sistema" name="system" domain="[('is_system_action','=',True)]"/>
                <filter string="Requieren AprobaciÃ³n" name="needs_approval" domain="[('requires_approval','=',True)]"/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_by_system" context="{'group_by':'is_system_action'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action and Menu -->
    <record id="action_document_action" model="ir.actions.act_window">
        <field name="name">Acciones de Documentos</field>
        <field name="res_model">document.action</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configura las diferentes acciones que pueden realizarse con los documentos
            </p>
        </field>
    </record>

</odoo>