<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_saving_tree_view" model="ir.ui.view">
      <field name="name">account.saving.view</field>
      <field name="model">account.saving</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="saving_type"/>
          <field name="periods"/>
          <field name="saving_amount"/>
          <field name="company_id"/>
          <field name="currency_id"/>
           <field name="state"/>
        </tree>
      </field>
    </record>
 


    <record id="account_saving_form_view" model="ir.ui.view">
      <field name="name">account_saving.form.view</field>
      <field name="model">account.saving</field>
      <field name="arch" type="xml">
        <form>
          <header>
             <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" required='1'/>
              </h1>
            </div>
              <group colspan="2">
                <group col="2" >






                  <field name="saving_type"/>
                   <field name="saving_plan_id" domain="[('saving_type','=',saving_type)]"/>
               <field name="partner_id"/>

                      <field name="seller_id"/>
                      <field name="start_date"/>
                      <field name="end_date"/>


                  <field name="periods"/>
                  <field name="saving_amount"/>
                  <field name="fixed_amount"/>
                  <field name="quota_amount"/>
                </group>
                <group col="2">
               <field name="company_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="currency_id" readonly="1" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="journal_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                  <field name="document_type_id" options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
           <field name="analytic_account_id"  options="{'no_create':True,'no_edit':True,'no_open':True,}"/>
                   <field name="info_migrate"/>

                  <field name="rate_inscription"/>
                   <field name="rate_expense"/>
                   <field name="rate_insurance"/>
                   <field name="rate_decrement_year"/>

                

                </group>
              </group>
            <notebook>
                <page string="Cuotas">
                   <field name="line_ids">
                           <tree string="saving items" >
                <field name="sequence"/>
                 <field name="currency_id" invisible="1"/>
                            <field name="number"/>
                                <field name="date"/>
                                <field name="saving_amount" sum="total"/>
                               <field name="principal_amount" sum="total"/>

                               <field name="pagos"  sum="total"/>
                                <field name="pendiente"/>
                                <field name="estado_pago"/>
                             </tree>
                   </field>
                </page>
              <page string="Contrato">
                   <group colspan="2">
                <group col="2" >
                           <field name="partner_signed_id"/>
                     <field name="partner_signed_date"/>

                        </group>
                     <group col="2" >
                         <field name="company_signed_id"/>
                     <field name="company_signed_date"/>
                         <field name="interest_expenses_account_id"/>

                        </group>



              </group>

                </page>

            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>

    </record>

    <record id="account_saving_action" model="ir.actions.act_window">
      <field name="name">Planes de Ahorro</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.saving</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="domain">[]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new record.
        </p>
      </field>
    </record>


  
</odoo>