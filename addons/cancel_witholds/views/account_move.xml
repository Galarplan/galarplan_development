<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_move_form_view_edi_show_inherit">
            <field name="name">account.move.form.view.edi.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_edi.view_move_form_inherit" />
            <field name="arch" type="xml">

                <button name="button_cancel_posted_moves" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>

                <button name="button_abandon_cancel_posted_posted_moves" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>

                <button name="button_abandon_cancel_posted_posted_moves" position="after">
                    
                    <button name="button_cancel" icon="fa-times" string="Anular" type="object"
                        groups="account.group_account_invoice" data-hotkey="w"
                        attrs="{'invisible' : ['|', '|', ('id', '=', False), ('state', 'in', ('cancel','draft')),('move_type', '==', 'entry'),('edi_state', '!=', 'sent')]}" />

                    <button name="button_cancel_to_draft" icon="fa-times" string="Anular apuntes"
                        type="object"
                        groups="cancel_witholds.access_cancel_move"
                        attrs="{'invisible' : [('state','=','draft')]}" />

                    <button name="button_publish_only_accounting"
                        string="Publicar Apuntes "
                        type="object" class="btn-primary"
                        groups="cancel_witholds.access_cancel_move"
                        attrs="{'invisible' : [('state','=','posted')]}" />

                </button>


            </field>
        </record>

        <record id="inherit_account_move_tree_massive_button" model="ir.ui.view">
            <field name="name">inherit.account.move.tree.button.massive</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="after">

                    <button name="button_publish_only_accounting"
                        type="object"
                        string="Publicar Borradores"
                        groups="cancel_witholds.access_cancel_move"
                        class="btn-primary"
                    />

                </xpath>
            </field>
        </record>


        <record id="action_move_withhold_in" model="ir.actions.act_window">
            <field name="name">Retenciones de Proveedores</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_move_tree" />
            <field name="search_view_id" ref="account.view_account_invoice_filter" />
            <field name="domain">[('move_type', '=',
                'entry'),('journal_id.l10n_ec_withhold_type','=','in_withhold')]</field>
            <field name="context">{'show_auth':True,'default_move_type':
                'entry','create':False,'delete':False,'create':False}</field>
        </record>

        <record id="action_move_withhold_out" model="ir.actions.act_window">
            <field name="name">Retenciones de Clientes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_move_tree" />
            <field name="search_view_id" ref="account.view_account_invoice_filter" />
            <field name="domain">[('move_type', '=',
                'entry'),('journal_id.l10n_ec_withhold_type','=','out_withhold')]</field>
            <field name="context">{'show_auth':False,'default_move_type':
                'entry','create':False,'delete':False,'create':False}</field>
        </record>


    </data>


</odoo>