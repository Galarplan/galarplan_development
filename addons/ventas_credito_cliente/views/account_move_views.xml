<odoo>
    <record id="view_move_form_credit" model="ir.ui.view">
        <field name="name">account.move.form.credit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <group>
                    <field name="is_credit_sale" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                    <field name="is_credit_bank" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                    <field name="is_direct" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                    <field name="is_galarplan" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>