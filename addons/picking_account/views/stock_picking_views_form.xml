<!-- views/stock_picking_views.xml -->
<odoo>
    <record id="view_picking_form_inherit_accounting" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.accounting</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="accounting_entries" string="Asientos Contables">
                    <field name="account_move_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="journal_id"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
