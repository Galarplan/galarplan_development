<odoo>
    <record id="view_invoice_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Añadir una nueva pestaña en la vista de la factura -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <group>
                    <field name="parcial" />
                    <field name="total_antes"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Pagos Migrado">
                    <group>
                        <button name="agregar_pagos" string="Historico" type="object" class="oe_highlight"/>
                    </group>
                    <field name="details_ids">
                        <tree string="Detalles" editable="bottom">
                            <field name="name" />
                            <field name="amount" />
                        </tree>
                    </field>
                    <field name="datos_pagos_json" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>