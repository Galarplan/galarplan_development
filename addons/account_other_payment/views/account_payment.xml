<odoo>
    <record id="view_account_payment_form_inherit_other_payment" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="other_payment" />
                <field name="counterpart_account_id"
                    attrs="{'invisible': [('other_payment', '=', False)]}" />
            </xpath>
        </field>
    </record>


    <record id="view_account_payment_form_inherit_payment" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//header" position="inside">
                <button 
                    name="action_create_payment_entry" 
                    string="Crear Movimiento Contable" 
                    type="object" 
                    class="btn-primary" 
                    attrs="{'invisible': [('state', '!=', 'draft')]}"
                />
            </xpath>
        </field>
    </record>

</odoo>