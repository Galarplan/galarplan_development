                    <div t-if="report_type == 'pdf'" class="text-muted" style="margin: 5px 0;">
                        Pagina: <span
                            class="page" /> de <span class="topage" />
                    </div>
                    <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted"
                        style="margin: 0;">
                        <span t-field="o.name" />
                    </div>
                </div>
            </div>
        </template>
