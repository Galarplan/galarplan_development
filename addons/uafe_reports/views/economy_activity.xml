<odoo>
    <!-- Vista tipo Tree -->
    <record id="view_economy_activity_tree" model="ir.ui.view">
        <field name="name">economy.activity.tree</field>
        <field name="model">economy.activity</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" string="Nombre de la Actividad"/>
                <field name="code" string="Código"/>
                <field name="active" string="Activo"/>
            </tree>
        </field>
    </record>

    <!-- Acción asociada -->
    <record id="action_economy_activity" model="ir.actions.act_window">
        <field name="name">Actividades Económicas</field>
        <field name="res_model">economy.activity</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                Usa esta lista para registrar las <strong>Actividades Económicas</strong> 
                con sus respectivos códigos.
            </p>
        </field>
    </record>

</odoo>
